<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net451</TargetFrameworks>
	<TargetFrameworkIdentifier Condition="'$(_ShortFrameworkIdentifier)'=='net'">.NETFramework</TargetFrameworkIdentifier>
    <TargetFrameworkIdentifier Condition="'$(_ShortFrameworkIdentifier)'=='netstandard'">.NETStandard</TargetFrameworkIdentifier>
	<GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <Description>A packet capture framework for .NET</Description>
    <Authors>Chris Morgan (chmorgan@gmail.com)</Authors>
    <Version>4.4.1</Version>
    <Company></Company>
    <Product>SharpPcap</Product>
    <Copyright>Tamir Gal, Chris Morgan and others</Copyright>
    <PackageProjectUrl>https://github.com/chmorgan/sharppcap</PackageProjectUrl>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>TRACE;DEBUG;NETSTANDARD2_0;</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|netstandard2.0|AnyCPU'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <OutputPath></OutputPath>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|netstandard2.0|AnyCPU'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <OutputPath></OutputPath>
    <DefineConstants>TRACE;NETSTANDARD2_0;RELEASE;</DefineConstants>
  </PropertyGroup>
  
  <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|net451|AnyCPU'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <OutputPath></OutputPath>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|net451|AnyCPU'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <OutputPath></OutputPath>
    <DefineConstants>TRACE;NETSTANDARD2_0;RELEASE;</DefineConstants>
  </PropertyGroup>
  
  <ItemGroup>
    <None Remove="App.ico" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="App.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="log4net" Version="2.0.8" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="PacketDotNet">
      <HintPath>PacketDotNet\PacketDotNet.dll</HintPath>
    </Reference>
    <Reference Include="PacketDotNet.Interface">
      <HintPath>PacketDotNet\PacketDotNet.Interface.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="AssemblyInfo.cs">
      <SubType>Code</SubType>
    </Compile>
    <Compile Update="LibPcap\LibPcapLiveDevice.cs">
      <SubType>Code</SubType>
    </Compile>
    <Compile Update="LibPcap\PcapHeader.cs">
      <SubType>Code</SubType>
    </Compile>
    <Compile Update="Pcap.cs">
      <SubType>Code</SubType>
    </Compile>
    <Compile Update="PcapException.cs">
      <SubType>Code</SubType>
    </Compile>
    <Compile Update="Version.cs">
      <SubType>Code</SubType>
    </Compile>
    <Compile Update="WinPcap\SendQueue.cs">
      <SubType>Code</SubType>
    </Compile>
    <Compile Update="WinPcap\StatisticsModePacket.cs">
      <SubType>Code</SubType>
    </Compile>
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions">
      <Version>2.0.0</Version>
    </PackageReference>
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions">
      <Version>2.0.0</Version>
    </PackageReference>
  </ItemGroup>

</Project>
